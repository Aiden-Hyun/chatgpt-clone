{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2022", "dom"],
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["@types/node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022"
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
